<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KMatrix" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>

        <item name="colorSurface">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">?attr/colorAccent</item>
        <!-- Customize your theme here. -->
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="actionBarTheme">@style/Theme.KMatrix.AppBarLayout</item>
        <item name="actionOverflowButtonStyle">@style/Theme.KMatrix.ActionOverflowButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/Theme.KMatrix.ActionOverflowStyle</item>

        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Theme.KMatrix.ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
        <item name="tint">@color/colorAccent</item>
    </style>

    <style name="Theme.KMatrix.ActionOverflowStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?colorPrimary</item>
    </style>

    <style name="Theme.KMatrix.AppBarLayout" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Customize the AppBarLayout -->
        <!--<item name="android:background">?colorPrimary</item>-->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>


</resources>