<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uiModules.home.ActivityHome">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/Theme.KMatrix.Scrollbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSetWallpaper"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorAccent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clCharSet"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCharSetTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/title_character_set"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCharSetDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Binary"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvCharSetTitle"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clBitColor"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBitColorTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardBitColor"
                    android:layout_marginEnd="5dp"
                    android:text="@string/title_bit_color"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBitColorDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardBitColor"
                    android:layout_marginEnd="5dp"
                    android:text="@string/desc_choose_bit_color"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvBitColorTitle"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/cardBitColor"
                    app:cardBackgroundColor="@color/colorWhite"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/viewBitColor"
                        android:background="@color/colorAccent"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clBgColor"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBgTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardBgColor"
                    android:layout_marginEnd="5dp"
                    android:text="@string/title_background_color"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBgDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardBgColor"
                    android:layout_marginEnd="5dp"
                    android:text="@string/desc_choose_background_color"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvBgTitle"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/cardBgColor"
                    app:cardBackgroundColor="@color/colorWhite"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/viewBgColor"
                        android:background="@color/colorBlack"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clDepth"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDepthTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/switchDepth"
                    android:layout_marginEnd="5dp"
                    android:text="@string/title_enable_depth"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDepthDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/switchDepth"
                    android:layout_marginEnd="5dp"
                    android:text="@string/desc_bits_depth"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDepthTitle"
                    />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/switchDepth"
                    android:saveEnabled="false"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <include
                android:id="@+id/includeAdView"
                layout="@layout/ad_mob_banner_ad_layout"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clBitsNum"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBitsNumTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/title_number_of_bits"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBitsNumDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="10"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvBitsNumTitle"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clBitSize"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBitSizeTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/title_bit_text_size"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBitSizeDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="36"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvBitSizeTitle"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clBitChangeSpeed"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvChangeSpeedTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/title_bit_change_speed"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvChangeSpeedDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="100%"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvChangeSpeedTitle"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clBitFallSpeed"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFallSpeedTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/title_bit_falling_speed"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFallSpeedDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="100%"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvFallSpeedTitle"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clReset"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvResetTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/title_reset_to_default"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvResetDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/desc_reset_default"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvResetTitle"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clDonateVersion"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDonateVersionTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/title_get_donation_version"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDonateVersionDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/desc_get_donation_version"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDonateVersionTitle"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                style="@style/Theme.KMatrix.ClickableWithinBorder"
                android:id="@+id/clAboutUs"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAboutUsTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/title_about_us"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH4"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAboutUsDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/desc_about_us"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeH5"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvAboutUsTitle"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="4dp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDedicatedMsg"
                android:text="@string/msg_app_dedicated"
                android:gravity="center"
                android:layout_marginTop="@dimen/paddingVerticalItems"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSizeH4"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDedicatedName"
                android:paddingHorizontal="@dimen/paddingHorizontalItems"
                android:layout_marginBottom="@dimen/paddingVerticalItems"
                android:text="@string/name_major_motoko"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSetWallpaper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/title_set_wallpaper"
        app:backgroundTint="@color/colorAccent"
        style="@style/Theme.KMatrix.MaterialButton"
        android:textColor="@color/colorWhite"
        />
</androidx.constraintlayout.widget.ConstraintLayout>